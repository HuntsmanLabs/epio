
<div class="container">
<div class="row">
	
	<!-- Profiles and Connections -->
	<div class="col-md-2 text-center">
		<%= image_tag "logo.png", class: "logo" %>
		<hr>
		<div class="timezone">
		<p class="text-center">Currently scheduling in <b><%= Time.zone.name %></b> time.</p>
		<%= link_to "Wrong Timezone?", edit_user_registration_path %>

		</div>
		<hr>
		<div class="social">
		<% unless current_user.connections.where(provider: "twitter").any? %>
			<%= link_to "Connect Twitter", "/auth/twitter", class: "btn btn-info btn-block btn-sm" %>
			<% else %>
			<%= link_to "Disconnect Twitter", connection_path(current_user.connections.where(provider: "twitter").first), method: :delete, class: "btn btn-info btn-block btn-sm" %>
			<% end %>

			<% unless current_user.connections.where(provider: "facebook").any? %>
			<%= link_to "Connect Facebook", "/auth/facebook", class: "btn btn-primary btn-block btn-sm" %>
			<% else %>
			<%= link_to "Disconnect Facebook", connection_path(current_user.connections.where(provider: "facebook").first), method: :delete, class: "btn btn-primary btn-block btn-sm" %>
			<% end %>


		</div>
	</div>


	<!-- Posts -->

	<div class="col-md-5">
		<H3 class="text-center">Queue</H3>
		<hr>
		<% if current_user.posts.where(state: "scheduled").any? %>
			<%= render @scheduled %>
			<%= will_paginate @scheduled, :param_name => 'scheduled_page' %>
		<% else %>
			<p class="text-center">World changing posts posted, pictures shared and updates broadcast.<%= link_to "Add more?", new_post_path %></p>
			<hr> 
		<% end %> 
	</div>

	<!-- History -->

	<div class="col-md-5">
		<H3 class="text-center">History</H3>
		<hr>
		<%= render @history %>
		<%= will_paginate @history, :param_name => 'history_page' %> 
	</div>

</div>
</div>
